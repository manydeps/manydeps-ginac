build:linux_gcc   --cxxopt=-std=c++20 --client_env=CC=gcc   --define=MY_LONG_SIZE=64 --define=GMP_TYPE_L="#define GMP_DEMANDS_UINTD_LONG" --define=GMP_TYPE_LL="/* #undef GMP_DEMANDS_UINTD_LONG_LONG */" --define=TIME_UNIX_WIN="#define HAVE_GETTIMEOFDAY"
